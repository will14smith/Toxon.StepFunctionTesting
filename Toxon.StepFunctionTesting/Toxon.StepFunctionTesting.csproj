<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <PackageId>Toxon.StepFunctionTesting</PackageId>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <Version>0.3.0</Version>
        <Authors>will14smith</Authors>
        <Description>Framework for unit testing AWS Step Functions state machine behavior using TestState and mocks</Description>
        <RepositoryUrl>https://github.com/will14smith/Toxon.StepFunctionTesting</RepositoryUrl>
        <PackageReadmeFile>README.md</PackageReadmeFile>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="AWSSDK.StepFunctions" Version="3.7.502.32"/>
    </ItemGroup>

    <ItemGroup>
      <None Include="..\README.md" Pack="true" PackagePath="\"/>
    </ItemGroup>

</Project>
